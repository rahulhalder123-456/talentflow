
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Admin Config ---
    // Anyone can read the list of admin UIDs.
    // Only an existing admin can modify the list of admins.
    match /config/admins {
      get: if true;
      write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/config/admins).data.uids;
    }

    // --- Users ---
    // Users can read their own profile.
    // Users can create their own profile.
    // Users can update their own profile.
    // Admins can read any user's profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Projects ---
    // Users can read projects they own.
    // Admins can read any project.
    // Logged-in users can create projects.
    // Project owners and admins can update projects.
    match /projects/{projectId} {
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Time entries can be read by project owner or admin
    // Time entries can be created/updated by admin
    match /projects/{projectId}/timeEntries/{entryId} {
        allow read: if request.auth != null && (get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid || isAdmin());
        allow write: if request.auth != null && isAdmin();
    }
    
    // --- Featured Projects (Showcase) ---
    // Anyone can read featured projects for the public homepage.
    // Only admins can create, update, or delete them.
    match /featuredProjects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }

    // --- Reviews ---
    // Reviews are public to read.
    // Logged-in users can create reviews for projects they own.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // --- Chats & Messages ---
    // Chat participants and admins can access messages.
    match /chats/{chatId} {
        allow get: if request.auth != null && (request.auth.uid in resource.data.participants || isAdmin());
        
        // This covers creating the chat document when the first message is sent
        allow list, write: if request.auth != null && (request.auth.uid == getChatClientUid(chatId) || isAdmin());
        
        match /messages/{messageId} {
            allow read, write: if request.auth != null && (request.auth.uid == getChatClientUid(chatId) || isAdmin());
        }
    }

    // --- Helper Functions ---
    function isAdmin() {
      return request.auth != null && request.auth.uid in get(/databases/$(database)/documents/config/admins).data.uids;
    }
    
    function getChatClientUid(chatId) {
        return chatId.replace('support_', '');
    }
  }
}
